# Taskinfa-Kanban Docker Worker
# Multi-project worker for secure, isolated task execution
# Workers can work on ANY project based on priority

FROM ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    jq \
    bash \
    ca-certificates \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI for PR creation
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg \
    | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" \
    | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install -y gh \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20 (LTS)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Create directories
# /workspace - where projects are cloned (only dir Claude can access)
# /app/logs - worker execution logs
RUN mkdir -p /workspace /app/logs

# Set workspace as the working directory
WORKDIR /workspace

# Copy worker script
COPY scripts/worker/docker-worker.sh /app/worker.sh
RUN chmod +x /app/worker.sh

# Create non-root worker user for security
RUN useradd -m -s /bin/bash worker && \
    chown -R worker:worker /workspace /app

# Switch to non-root user
USER worker

# Environment variables (to be overridden at runtime)
# Worker identification
ENV WORKER_NAME=Worker-1

# Taskinfa API configuration
ENV TASKINFA_API_KEY=""
ENV TASKINFA_API_URL="https://taskinfa-kanban.secan-ltd.workers.dev/api"

# Polling configuration
ENV POLL_INTERVAL=30

# Git/GitHub configuration (for cloning private repos)
ENV GITHUB_TOKEN=""

# Note: Claude Code credentials are mounted from host at /home/worker/.claude

# Health check - verify worker script is running
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=3 \
    CMD pgrep -f "docker-worker.sh" || exit 1

# Run worker script
CMD ["/app/worker.sh"]
