{
  "name": "taskinfa-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Autonomous task automation system integrating kanban dashboard with Claude Code",
  "author": "SECAN",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
