{
  "name": "taskinfa-kanban",
  "version": "1.0.0",
  "private": true,
  "description": "Autonomous task automation system integrating kanban dashboard with Claude Code",
  "author": "SECAN",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "dashboard:dev": "npm run dev --workspace=packages/dashboard",
    "bot:run": "npm run start --workspace=packages/bot",
    "docker:setup": "./scripts/docker-manage.sh setup",
    "docker:up": "./scripts/docker-manage.sh up",
    "docker:down": "./scripts/docker-manage.sh down",
    "docker:restart": "./scripts/docker-manage.sh restart",
    "docker:logs": "./scripts/docker-manage.sh logs",
    "docker:status": "./scripts/docker-manage.sh status",
    "docker:build": "./scripts/docker-manage.sh build",
    "docker:shell": "./scripts/docker-manage.sh shell",
    "docker:clean": "./scripts/docker-manage.sh clean",
    "docker:help": "./scripts/docker-manage.sh help"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
